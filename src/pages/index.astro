---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'ニュースプラス — 最新ニュースと分析',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: '最新ニュースを読む',
        href: '#news',
        target: '_self',
        icon: 'tabler:news',
      },
      { text: 'もっと詳しく', href: '#about' },
    ]}
    image={{ src: '~/assets/images/news-hero-image.png', alt: 'ニュースプラス ヒーローイメージ' }}
  >
    <Fragment slot="title">
      最新の<span class="text-accent dark:text-white highlight">ニュース</span>と深い<span class="text-accent dark:text-white highlight">分析</span>
    </Fragment>

    <Fragment slot="subtitle">
      ニュースプラスは、最新のニュースとその背後にある深い分析を提供します。政治、経済、テクノロジー、スポーツまで、あらゆるジャンルのニュースをカバーしています。
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="特集"
    title="今週のトップニュース"
    subtitle="この週に世界を動かしたニュースとその詳細な分析。"
    items={[
      {
        title: '政治の最新動向',
        description: '国内外の政治情勢に関する最新のニュースと分析。',
        icon: 'tabler:report',
      },
      {
        title: '経済の動き',
        description: '世界経済に影響を与える最新の経済ニュースとトレンド。',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'テクノロジーの進化',
        description: '最新テクノロジーの発展とその社会への影響。',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'スポーツ界の話題',
        description: '国内外のスポーツ界からの最新ニュースとハイライト。',
        icon: 'tabler:ball-basketball',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="ニュースプラスの使い方"
    items={[
      {
        title: 'ステップ 1: サインアップ',
        description: '最新ニュースをいち早く受け取るために、ニュースプラスにサインアップしてください。',
        icon: 'tabler:edit',
      },
      {
        title: 'ステップ 2: カテゴリ選択',
        description: '興味のあるニュースカテゴリを選択して、パーソナライズされたフィードを作成します。',
        icon: 'tabler:filter',
      },
      {
        title: 'ステップ 3: 記事を読む',
        description: '最新のニュース記事を読んで、世界で起こっていることを理解しましょう。',
        icon: 'tabler:book',
      },
      {
        title: '準備完了!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWペfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'ニュースプラスの使い方イメージ',
    }}
  />

  <!-- BlogLatestPosts Widget ******* -->

  <BlogLatestPosts
    title="最新のブログ投稿"
    information="ニュースプラスのブログでは、ニュースの背後にあるストーリーや分析、意見を深掘りしています。"
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="よくある質問"
    subtitle="ニュースプラスの使用に関するよくある質問とその回答をご紹介します。"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'ニュースプラスは無料ですか？',
        description: 'はい、ニュースプラスはユーザーに無料で提供されています。最新のニュースをいつでもどこでも読むことができます。',
      },
      {
        title: 'どのようにニュースを選んでいますか？',
        description: '私たちは、信頼性と正確性を重視して、各分野の専門家による厳選されたニュースソースから情報を収集しています。',
      },
      {
        title: 'パーソナライズされたニュースフィードを作成するには？',
        description: 'アカウントにサインアップし、興味のあるカテゴリを選択することで、パーソナライズされたニュースフィードを作成できます。',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: '登録ユーザー', amount: '50万人' },
      { title: '記事数', amount: '10万件' },
      { title: 'カテゴリ数', amount: '30' },
      { title: '毎日の訪問者', amount: '10万人' },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: '今すぐ登録する',
        href: 'https://example.com/signup',
        target: '_blank',
        icon: 'tabler:login',
      },
    ]}
  >
    <Fragment slot="title">ニュースプラスに参加しよう</Fragment>

    <Fragment slot="subtitle">
      最新のニュースと深い分析を毎日受け取る。世界の出来事についてもっと知り、理解を深めましょう。
    </Fragment>
  </CallToAction>
</Layout>